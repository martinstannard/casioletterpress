extends layout

block content
  h1= title
  p Welcome to #{title}
  div(id="status")
  div(id="letters")
  button(id="reset") Reset!

  article
    h1 Casio
      span  Letterpress

    section.screen
      p
    section.buttons.commands
      div.row
        div.button.send(data-action="send") Send

    section.buttons.letters
      .row
        .button(data-letter="A") A
        .button(data-letter="B") B
        .button(data-letter="C") C
        .button(data-letter="D") D
